@startuml
left to right direction
actor "User" as User
rectangle "Simple Car Rental System" {
usecase UC1 as "Login to System"
usecase UC2 as "Browse Available Cars"
usecase UC3 as "View Selected Car Details"
usecase UC4 as "Rent a Car"
usecase UC5 as "Enter Personal Details"
usecase UC6 as "Verify Payment Amount"
}
User --> UC1
User --> UC2
User --> UC3
User --> UC4
User --> UC5
User --> UC6
UC2 ..> UC3 : <<include>>
UC4 ..> UC5 : <<include>>
UC4 ..> UC6 : <<include>>
UC4 ..> UC3 : <<include>>
@enduml